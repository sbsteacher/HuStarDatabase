# 테이블 (스키마)
DDL 정의어
DML 조작어
DCL 제어어

C (Create) - insert
R (Read) -   select
U (Update) - update
D (Delete) - delete


# hustar 데이터베이스 생성
-- 쿼리문 작성

-- 테이블 생성
CREATE TABLE t_board (
	title VARCHAR(100),
	ctnt VARCHAR(2000),
	writer CHAR(5),
	rdt DATETIME
);

-- 싱글라인 주석
/* 
	멀티라인 주석
*/

-- Create 값 넣기
INSERT INTO t_board
(title, ctnt, writer, rdt)
VALUES
